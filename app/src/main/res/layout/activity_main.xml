<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:text="Name"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="102dp"
        tools:paddingLeft="5dp" />

    <EditText
        android:id="@+id/nametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="102dp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:text="E-mail"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="59dp"
        android:layout_height="48dp"
        android:layout_marginBottom="108dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="age"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ages"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/share"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="SUMIT N SHARE"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="429dp" />

    <EditText
        android:id="@+id/ages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="355dp" />

    <EditText
        android:id="@+id/clss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="163dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="SignUp Form"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="PASSWORD"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="235dp" />

    <EditText
        android:id="@+id/passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:text="STATE"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="302dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="61dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="286dp">

        <Spinner
            android:id="@+id/spnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_marginLeft="120dp"
            tools:layout_marginRight="15dp"
            tools:layout_marginTop="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="201dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="85dp"></LinearLayout>

</android.support.constraint.ConstraintLayout>